# Maintainer: Aditya Shakya <adi1090x@gmail.com>

pkgname=ac-grub2-theme-slaze
pkgver=1.0
pkgrel=1
pkgdesc="Slaze : A grub2 theme for archcraft OS."
arch=('any')
license=('GPL')
provides=($pkgname)
conflicts=($pkgname)
depends=('grub')

package() {
	# copy whole dir recursively to destination
	(find Slaze -type f -exec install -Dm 644 "{}" "$pkgdir/boot/grub/themes/{}" \;)
}
